   for(i=1;i<9;i++)
   {
     if((state[i]==0x80)||(state[i]==0x7F))
	 {
	    USART0_Transmit(STX);
	 }
	 USART0_Transmit(state[i]);
     temp += state[i];
   }
   if((temp==0x80)||(temp==0x7F))
   {
	    USART0_Transmit(STX);
   }
   USART0_Transmit(temp);
   USART0_Transmit(ETX);
}

/*****************************************************************************/
/**********  States_Check()                                                         /
/**********  状态检查                                                /
/**********  huan.ma                                                      /
/**********  2013.09.27                                                       /
/*****************************************************************************/
void States_Check(uchar DLEN)
{
   uchar temp;
   uchar i;
   uchar ret;
   uchar error_number=0;
   for(i=1;i<9;i++)
   {
      state_check[i]=0;
   }
   state[1] = GetPA(4) + GetPA(3)*2 + GetPA(1)*4;//出币口传感器1，出币口传感器2，清空传感器  0x07
   POWER_LED_OFF;
   delay(5);
   check[1] = GetPA(4) + GetPA(3)*2 + GetPA(1)*4; //出币口传感器1，出币口传感器2，清空传感器0x00
   POWER_LED_ON;
   sole_en_ON;
   motor_en_ON;
   Sole_ON();
   out_coin_sensors_check(BACKWARD,1000,1);
   WDR();
   //check[1] =check[1] | (GetPA(1)*4);
   //delay(5);
   if(((check[1] ^ 0x07) & 0x07) == (state[1] & 0x07))
   {
      state_check[1]=state_check[1] | 0x00;      //无报错   0x00
	  display(0);
   }
   else
   {
      if((check[1] & 0x01) == (state[1] & 0x01))
	  {
	     state_check[1]=state_check[1] | 0x01;  //传感器1报错   0x01
		 error_number++;
		 display(1);
	  }
	  if((check[1] & 0x02) == (state[1] & 0x02))
	  {
	     state_check[1]=state_check[1] | 0x02;  //传感器2报错   0x02
		 error_number++;
		 display(2);
	  }
	  if((check[1] & 0x04) == (state[1] & 0x04))
	  {
	     state_check[1]=state_check[1] | 0x04;  //清空传感器报错  0x04
		 error_number++;
		 display(3);
	  }
   }
   Sole_OFF();
   motor_stop();
   //sole_en_OFF;

   state[2] = 0x00;
   state_check[2]=0x00;
   state[3] = 0x00;
   state_check[3]=0x00;
   state[4] = 0x00;
   state_check[4]=0x00;
   
   state[5] = BUSY*2+GetPA(2)*16 +GetPA(0)*32;//忙碌，已空，将空
   POWER_LED_OFF;
   delay(5);
   check[5] = BUSY*2+GetPA(2)*16 +GetPA(0)*32;//忙碌，已空，将空
   POWER_LED_ON;
   if(((check[5] ^ 0x30) & 0x30) == (state[5] & 0x30))
   {
      state_check[5]=state_check[5] | 0x00;      //无报错   0x00
	  if(error_number==0)
	  {
	     display(0);
	  }
   }
   else
   {
      if((check[5] & 0x10) == (state[5] & 0x10))
	  {
	     state_check[5]=state_check[5] | 0x10;  //已空传感器报错   0x10
		 display(4);
	  }
	  if((check[5] & 0x20) == (state[5] & 0x20))
	  {
	     state_check[5]=state_check[5] | 0x20;  //将空传感器报错   0x20
		 display(5);
	  }
   }
   state[6] = 0x00;
   state_check[6]=0x00;
   state[7] = 0x00;
   state_check[7]=0x00;
   state[8] = IO_init_OK*128;
   state_check[8]=0x00;
   USART0_Transmit(STX);
   USART0_Transmit(RSEQ);
   temp = RSEQ;
   USART0_Transmit(DESA);
   temp += DESA;
   USART0_Transmit(SRCA);
   temp += SRCA;
   USART0_Transmit(DLEN);
   temp += DLEN;
   USART0_Transmit(ACK_CMD_INTIME);
   temp += ACK_CMD_INTIME;
   USART0_Transmit(CMD_STATE_Check);
   temp += CMD_STATE_Check;
   for(i=1;i<9;i++)
   {
     if((state_check[i]==0x80)||(state_check[i]==0x7F))
	 {
	    USART0_Transmit(STX);
	 }
	 USART0_Transmit(state_check[i]);
     temp += state_check[i];
   }
   if((temp==0x80)||(temp==0x7F))
   {
	    USART0_Transmit(STX);
   }
   USART0_Transmit(temp);
   USART0_Transmit(ETX);
}

