void calculateLRC(uchar*buffer, int length,uchar lrc)
{
	uchar result = 0;
	int count = 0;
	for(count=2; count<(length+6); count++)
		{
			result += buffer[count];
		}
	lrc = result;
}

//进行指令的LRC校验
uchar CheckLRC(void)
{
   uchar i;
   uchar result,length;
   result = 0;
   length = 0;
   length = buffer[5];
   
   
   for(i=2;i<length+6;i++)
   {
     result += buffer[i];
   }
   if(result == buffer[length+6])
   {
     return 1;  
   }
   else
   {
     return 0;
   }
   
}


