void out_coin_check(void)
{
   uchar ret;
   uchar n = 0;
   out_coin_error=0;
   for(n=0;n<5;n++)
   {
	      if((GetPA(1)==1)&&(GetPA(4) == 1)&&(GetPA(3) == 1))
		  {
		     WDR();
			 if(n >= 2)
			 {
				WDR();
				motor_stop();
				delay(500+n*100);
			 }
		     ret=out_coin_sensors_check(FOREWARD,800+n*100,0);
             if(ret == 1)
             {
			    out_coin_sensors_check(BACKWARD,50,0);
			    break;
             }
             else
             {
				WDR();
				motor_stop();
				delay(500+n*200);
				ret=out_coin_sensors_check(BACKWARD,500+n*100,0);
			    if(ret == 1)
			    {
			       break;
			    }
             }
		   }
		   else
		   {
		      out_coin_error=1;
		   }
    }
	if((empty_change==1)&&(closeempty_change==1))
	{
	   out_coin_sensors_check(BACKWARD,2000,1);
	}
	IOupDATA(0x04,message);
}

void Check_command(void)
{
   switch(command)
   {
      case CMD_SW_RESET:
	           message = CMD_SW_RESET; //软件复位
	           IOupACK(0x02,message);
			   IOupDATA(0x02,message);
		       command = 0;
			   delay(4000);
	   break;
	  case CMD_STATE_QUERY:
	           message = CMD_STATE_QUERY; //状态获取
	           IOupACK(0x02,message);
			   States_Get(0x0A);
		       command = 0;
	   break;
	   case CMD_STATE_Check:
	           message = CMD_STATE_Check; //状态检查
	           IOupACK(0x02,message);
			   States_Check(0x0A);
		       command = 0;
	   break;
	  case CMD_HD_SELF:
	           message = CMD_HD_SELF; //硬件自检
	           IOupACK(0x02,message);
			   HD_SELF();
			   IOupDATA(0x02,message);
		       command = 0;
	   break;
	  case CMD_CHG:
	           message = CMD_CHG; //出币
	           IOupACK(0x02,message);
			   //out_time_start = 1;
			   CHG();
			   //IOupDATA(0x04,message);
		       command = 0;
	   break;
	  case CMD_CLR:
	           message = CMD_CLR; //清币
	           IOupACK(0x02,message);
			   CLR();
			   IOupDATA(0x04,message);
			   CLR_Number= 0;
			   //CLR_Number_H = 0;
		       command = 0;
	   break;
	   case CMD_CLR_STOP:
	           message = CMD_CLR_STOP; //停止清币
			   IOupACK(0x02,message);
			   //sole_en_OFF;
	           //motor_en_OFF;
			   motor_stop();
	           Sole_OFF();
			   IOupDATA(0x04,message);
		       command = 0;
	   break;
	   case CMD_READ_VERSION:               //获取模块版本信息
	           message = CMD_READ_VERSION;
			   IOupACK(0x02,message);
	           Version_Get(0x12);
		       command = 0;
	   break;
   }
}

