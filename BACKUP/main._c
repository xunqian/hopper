      CEm=1;
   }*/
   
   if(closeempty_change == 0)
   {
       empty_change = 0;
   }
   
   state[5] = (BUSY * 2)+(empty_change * 16)+(closeempty_change * 32)+(out_coin_error *64)+(clr_coin_error *128);//忙碌，已空，将空，出币故障，清币故障
   state[6] = 0x00;
   state[7] = 0x00;
   state[8] = IO_init_OK*128;
   USART0_Transmit(STX);
   USART0_Transmit(RSEQ);
   temp = RSEQ;
   USART0_Transmit(DESA);
   temp += DESA;
   USART0_Transmit(SRCA);
   temp += SRCA;
   USART0_Transmit(DLEN);
   temp += DLEN;
   USART0_Transmit(ACK_CMD_INTIME);
